import javax.swing.*;
import java.awt.*;
import java.awt.event.*;

public class Cookieklicker {
    public static void main(String[] args)  {
        JFrame fenster = new JFrame("Mein 1. Fenster");
        fenster.setSize(600, 600);

        fenster.setLayout(new GridLayout(0, 1));

        JLabel lbGruß = new JLabel("Du bist spitze!");
        lbGruß.setFont(new Font(Font.SERIF, Font.BOLD, 48));
        lbGruß.setHorizontalAlignment(JLabel.CENTER);
        fenster.add(lbGruß);

        JLabel lbGruß2 = new JLabel("Du bist spitze");
        lbGruß2.setFont(new Font(Font.SERIF, Font.BOLD, 48));
        lbGruß2.setHorizontalAlignment(JLabel.CENTER);
        fenster.add(lbGruß2);

        JButton bKlicker = new JButton("Klick mich!");
        bKlicker.addActionListener(new ActionListener() {
                int x = 0;
                public void actionPerformed (ActionEvent event) {
                    int geklickt = 0;
                    geklickt += 1;
                    
                    JOptionPane.showMessageDialog(fenster, "Gleich kommt die gute Zauberfee");
                    lbGruß.setText("Du bist spitze");
                    lbGruß2.setText("Ich will eine Pizza");
                }
            });
        fenster.add(bKlicker);

        fenster.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        fenster.setVisible(true);
    }
}
